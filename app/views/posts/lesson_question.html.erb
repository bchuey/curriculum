<form action="/posts/send_lesson" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<select name="question" id="question">
		<% @grades.find(@grade_id).categories.find(@category_id).subjects.find(@subject_id).lessons.each do |lesson| %>
			<option value="<%= lesson.id %>"><%= lesson.title %></option>
		<% end %>
	</select>
	<input type="submit" value="Next" id="continue" class="btn btn-success">
</form>