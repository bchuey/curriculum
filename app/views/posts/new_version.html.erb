<div class="col-md-10">

<h3>Grade: <%= Post.find(session[:version][:id]).grade.level %></h3>
<h3>Category: <%= Post.find(session[:version][:id]).category.name %></h3>
<h3>Subject: <%= Post.find(session[:version][:id]).subject.name %></h3>
<h3>Lesson: <%= Post.find(session[:version][:id]).lesson.title %></h3>

<h3>Your lesson plan:</h3>
<form action="/posts/create_lesson" method="post">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<div class="form-group">
	<textarea name="content" class="form-control"><%= Post.find(session[:version][:id]).content %></textarea>
	</div>
	<div class="form-group">
	<input type="submit" value="submit" class="btn btn-primary">
	</div>
</form>

<script>
	CKEDITOR.replace( 'content' );
</script>

</div>